@model IEnumerable<DariTn.Models.Entities.Guarantee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.creationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.creationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Validate", "Validate", new { id = item.Id, asset = item.A }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, asset = item.A }) |
            @Html.ActionLink("Download", "Download", new { id = item.Id }) |
            @Html.ActionLink("Sell", "Sell", new { asset = item.A, client = item.C })
        </td>
    </tr>
}

</table>
